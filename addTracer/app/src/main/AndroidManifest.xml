<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tracer">
    <!-- Google Map -->
    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyDqbE_xzbRaQ4v5vvmfHZ_EHKhFTeaJxys" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 외부 URL로부터 동영상을 스트리밍하기 위한 권한. -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 재생중 화면 어두워짐, 잠김 방지하기 위한 권한. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tracer"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.addtracer.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.addtracer.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Tracer.NoActionBar" />

        <uses-library android:name="com.google.android.maps" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyApsLEl5w1VQfphxUrXYxcm6lwX2NWzM_I" />


        <activity
            android:name="com.example.addtracer.LoadingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.example.addtracer.LoginActivity"
            android:exported="false" >

        </activity>

    </application>

</manifest>